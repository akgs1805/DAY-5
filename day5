#include <stdio.h>
struct fraction
{
    int nume;
    int deno;
};

struct frac
{
    int n;
    struct fraction *a;
    int num;
    int den;
};
struct frac insert()
{
    struct frac f;
    printf("ENTER THE NUMBER OF FRACTIONS");
    scanf("%d",&f.n);
    f.a= malloc (f.n*sizeof(struct fraction));
    for(int i=0;i<f.n;i++)
    {
        printf("ENTER THE NUMERATOR OF %d fraction\n",i);
        scanf("%d",&f.a[i].nume);
        printf("ENTER THE DENOMINATOR OF %d FRACTION\n",i);
        scanf("%d",&f.a[i].deno);
    }
    return f;
}
struct frac compute(struct frac f)
{
    f.num=f.a[0].nume;
    f.den=f.a[0].deno;
    for(int k=1;k<f.n;k++)
    {
        f.num=f.num*f.a[k].deno+f.den*f.a[k].nume;
        f.den=f.den*f.a[k].deno;
    }
    int gcd,i;
    int n1=f.num;
    int n2=f.den;
     for(i=1; i <=n1  && i <= n2; ++i)
    {
        // Checks if i is factor of both integers
        if(n1%i==0 && n2%i==0)
            gcd = i;
    }
    f.num=f.num/gcd;
    f.den=f.den/gcd;
    return f;
}


